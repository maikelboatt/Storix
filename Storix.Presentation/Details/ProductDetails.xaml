<views:MvxWpfView x:Class="Storix.Presentation.Details.ProductDetails"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                  xmlns:loadingSpinnerControl="clr-namespace:LoadingSpinnerControl;assembly=LoadingSpinnerControl"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:products="clr-namespace:Storix.Core.ViewModels.Products;assembly=Storix.Core"
                  xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
                  d:DataContext="{d:DesignInstance Type=products:ProductDetailsViewModel,
                                                   IsDesignTimeCreatable=True}"
                  d:DesignHeight="auto"
                  d:DesignWidth="900"
                  mc:Ignorable="d">
    <Border Padding="30"
            Background="{DynamicResource PrimaryBackgroundColor}"
            BorderBrush="{DynamicResource SecondaryBorderColor}"
            BorderThickness="1"
            CornerRadius="12">
        <Grid>
            <!--  Loading Overlay  -->
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="{Binding IsLoading, Converter={StaticResource ToVisibilityConverter}, UpdateSourceTrigger=PropertyChanged}">
                <loadingSpinnerControl:LoadingSpinner Diameter="80"
                                                      IsLoading="{Binding IsLoading}"
                                                      Thickness="3" />
                <TextBlock Margin="0,10"
                           FontFamily="Californian FB"
                           FontSize="14"
                           Foreground="{DynamicResource SecondaryTextColor}"
                           Text="Loading product details..."
                           TextAlignment="Center" />
            </StackPanel>

            <!--  Main Content  -->
            <Grid Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}, ConverterParameter=true, UpdateSourceTrigger=PropertyChanged}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Header Section  -->
                <Border Grid.Row="0"
                        Margin="0,0,0,20"
                        Padding="20"
                        Background="{DynamicResource CardBackgroundColor}"
                        BorderBrush="{DynamicResource PrimaryBorderColor}"
                        BorderThickness="2"
                        CornerRadius="12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Width="32"
                                                            Height="32"
                                                            Foreground="#3B82F6"
                                                            Kind="PackageVariantClosed" />
                                <TextBlock Margin="12,0,0,0"
                                           VerticalAlignment="Center"
                                           FontFamily="Californian FB"
                                           FontSize="24"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource PrimaryTextColor}"
                                           Text="Product Details" />
                            </StackPanel>
                            <TextBlock Margin="44,5,0,0"
                                       FontSize="13"
                                       Foreground="{DynamicResource SecondaryTextColor}"
                                       Text="Complete information about this product"
                                       TextWrapping="Wrap" />
                        </StackPanel>

                        <!--  Stock Status Badge  -->
                        <Border Grid.Column="1"
                                Padding="20,10"
                                VerticalAlignment="Center"
                                CornerRadius="8">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="#D1FAE5" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsInStock}" Value="False">
                                            <Setter Property="Background" Value="#FEE2E2" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsLowStock}" Value="True">
                                            <Setter Property="Background" Value="#FEF3C7" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Width="20" Height="20">
                                    <iconPacks:PackIconMaterial.Style>
                                        <Style TargetType="iconPacks:PackIconMaterial">
                                            <Setter Property="Kind" Value="CheckCircle" />
                                            <Setter Property="Foreground" Value="#10B981" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsInStock}" Value="False">
                                                    <Setter Property="Kind" Value="CloseCircle" />
                                                    <Setter Property="Foreground" Value="#EF4444" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsLowStock}" Value="True">
                                                    <Setter Property="Kind" Value="AlertCircle" />
                                                    <Setter Property="Foreground" Value="#F59E0B" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </iconPacks:PackIconMaterial.Style>
                                </iconPacks:PackIconMaterial>
                                <TextBlock Margin="8,0,0,0"
                                           VerticalAlignment="Center"
                                           FontSize="14"
                                           FontWeight="Bold">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="In Stock" />
                                            <Setter Property="Foreground" Value="#065F46" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsInStock}" Value="False">
                                                    <Setter Property="Text" Value="Out of Stock" />
                                                    <Setter Property="Foreground" Value="#991B1B" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsLowStock}" Value="True">
                                                    <Setter Property="Text" Value="Low Stock" />
                                                    <Setter Property="Foreground" Value="#92400E" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!--  Product Details Content  -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!--  Product Overview Card  -->
                        <Border Padding="20"
                                Background="{DynamicResource CardBackgroundColor}"
                                BorderBrush="{DynamicResource SecondaryBorderColor}"
                                BorderThickness="1"
                                CornerRadius="8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!--  Product Name & SKU  -->
                                <StackPanel Grid.Row="0">
                                    <TextBlock FontSize="22"
                                               FontWeight="Bold"
                                               Foreground="{DynamicResource PrimaryTextColor}"
                                               Text="{Binding Product.Name}"
                                               TextWrapping="Wrap" />
                                    <StackPanel Margin="0,8,0,0" Orientation="Horizontal">
                                        <Border Padding="10,5"
                                                Background="#DBEAFE"
                                                CornerRadius="6">
                                            <StackPanel Orientation="Horizontal">
                                                <iconPacks:PackIconMaterial Width="14"
                                                                            Height="14"
                                                                            VerticalAlignment="Center"
                                                                            Foreground="#1E40AF"
                                                                            Kind="TagOutline" />
                                                <TextBlock Margin="6,0,0,0"
                                                           FontFamily="Consolas"
                                                           FontSize="13"
                                                           FontWeight="Bold"
                                                           Foreground="#1E40AF"
                                                           Text="{Binding Product.SKU}" />
                                            </StackPanel>
                                        </Border>
                                        <Border Margin="8,0,0,0"
                                                Padding="10,5"
                                                Background="#FEF3C7"
                                                CornerRadius="6"
                                                Visibility="{Binding Product.Barcode, Converter={StaticResource NullToVisibilityConverter}}">
                                            <StackPanel Orientation="Horizontal">
                                                <iconPacks:PackIconMaterial Width="14"
                                                                            Height="14"
                                                                            VerticalAlignment="Center"
                                                                            Foreground="#92400E"
                                                                            Kind="Barcode" />
                                                <TextBlock Margin="6,0,0,0"
                                                           FontFamily="Consolas"
                                                           FontSize="13"
                                                           Foreground="#92400E"
                                                           Text="{Binding Product.Barcode}" />
                                            </StackPanel>
                                        </Border>
                                        <Border Margin="8,0,0,0"
                                                Padding="10,5"
                                                Background="#E0E7FF"
                                                CornerRadius="6">
                                            <StackPanel Orientation="Horizontal">
                                                <iconPacks:PackIconMaterial Width="14"
                                                                            Height="14"
                                                                            VerticalAlignment="Center"
                                                                            Foreground="#4338CA"
                                                                            Kind="Pound" />
                                                <TextBlock Margin="6,0,0,0"
                                                           FontFamily="Consolas"
                                                           FontSize="13"
                                                           FontWeight="Bold"
                                                           Foreground="#4338CA"
                                                           Text="{Binding Product.ProductId}" />
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </StackPanel>

                                <!--  Description  -->
                                <Border Grid.Row="1"
                                        Margin="0,15,0,0"
                                        Padding="15"
                                        Background="{DynamicResource InfoBackgroundColor}"
                                        BorderBrush="{DynamicResource InfoBorderColor}"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Visibility="{Binding Product.Description, Converter={StaticResource NullToVisibilityConverter}}">
                                    <StackPanel>
                                        <TextBlock FontSize="12"
                                                   FontWeight="Bold"
                                                   Foreground="{DynamicResource SecondaryTextColor}"
                                                   Text="📝 DESCRIPTION" />
                                        <TextBlock Margin="0,6,0,0"
                                                   FontSize="13"
                                                   Foreground="{DynamicResource PrimaryTextColor}"
                                                   Text="{Binding Product.Description}"
                                                   TextWrapping="Wrap" />
                                    </StackPanel>
                                </Border>

                                <!--  Product Details Grid  -->
                                <Grid Grid.Row="2" Margin="0,20,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!--  Pricing Information  -->
                                    <StackPanel Grid.Row="0"
                                                Grid.Column="0"
                                                Margin="0,0,10,20">
                                        <TextBlock FontSize="11"
                                                   FontWeight="Bold"
                                                   Foreground="{DynamicResource SecondaryTextColor}"
                                                   Text="💰 SELLING PRICE" />
                                        <TextBlock Margin="0,6,0,0"
                                                   FontSize="20"
                                                   FontWeight="Bold"
                                                   Foreground="#10B981"
                                                   Text="{Binding Product.Price, StringFormat='${0:N2}'}" />
                                    </StackPanel>

                                    <StackPanel Grid.Row="0"
                                                Grid.Column="1"
                                                Margin="10,0,10,20">
                                        <TextBlock FontSize="11"
                                                   FontWeight="Bold"
                                                   Foreground="{DynamicResource SecondaryTextColor}"
                                                   Text="💵 COST PRICE" />
                                        <TextBlock Margin="0,6,0,0"
                                                   FontSize="20"
                                                   FontWeight="Bold"
                                                   Foreground="#F59E0B"
                                                   Text="{Binding Product.Cost, StringFormat='${0:N2}'}" />
                                    </StackPanel>

                                    <StackPanel Grid.Row="0"
                                                Grid.Column="2"
                                                Margin="10,0,0,20">
                                        <TextBlock FontSize="11"
                                                   FontWeight="Bold"
                                                   Foreground="{DynamicResource SecondaryTextColor}"
                                                   Text="📊 PROFIT MARGIN" />
                                        <TextBlock Margin="0,6,0,0"
                                                   FontSize="20"
                                                   FontWeight="Bold"
                                                   Foreground="#8B5CF6"
                                                   Text="{Binding ProfitMargin, StringFormat='${0:N2}'}" />
                                    </StackPanel>

                                    <!--  Stock Levels  -->
                                    <StackPanel Grid.Row="1"
                                                Grid.Column="0"
                                                Margin="0,0,10,20">
                                        <TextBlock FontSize="11"
                                                   FontWeight="Bold"
                                                   Foreground="{DynamicResource SecondaryTextColor}"
                                                   Text="📦 TOTAL STOCK" />
                                        <TextBlock Margin="0,6,0,0"
                                                   FontSize="20"
                                                   FontWeight="Bold"
                                                   Foreground="#3B82F6"
                                                   Text="{Binding TotalStock}" />
                                    </StackPanel>

                                    <StackPanel Grid.Row="1"
                                                Grid.Column="1"
                                                Margin="10,0,10,20">
                                        <TextBlock FontSize="11"
                                                   FontWeight="Bold"
                                                   Foreground="{DynamicResource SecondaryTextColor}"
                                                   Text="✅ AVAILABLE STOCK" />
                                        <TextBlock Margin="0,6,0,0"
                                                   FontSize="20"
                                                   FontWeight="Bold"
                                                   Foreground="#10B981"
                                                   Text="{Binding AvailableStock}" />
                                    </StackPanel>

                                    <StackPanel Grid.Row="1"
                                                Grid.Column="2"
                                                Margin="10,0,0,20">
                                        <TextBlock FontSize="11"
                                                   FontWeight="Bold"
                                                   Foreground="{DynamicResource SecondaryTextColor}"
                                                   Text="🔒 RESERVED STOCK" />
                                        <TextBlock Margin="0,6,0,0"
                                                   FontSize="20"
                                                   FontWeight="Bold"
                                                   Foreground="#F59E0B"
                                                   Text="{Binding ReservedStock}" />
                                    </StackPanel>

                                    <!--  Thresholds  -->
                                    <StackPanel Grid.Row="2"
                                                Grid.Column="0"
                                                Margin="0,0,10,0">
                                        <TextBlock FontSize="11"
                                                   FontWeight="Bold"
                                                   Foreground="{DynamicResource SecondaryTextColor}"
                                                   Text="📉 MIN STOCK LEVEL" />
                                        <TextBlock Margin="0,6,0,0"
                                                   FontSize="18"
                                                   FontWeight="SemiBold"
                                                   Foreground="#EF4444"
                                                   Text="{Binding Product.MinStockLevel}" />
                                    </StackPanel>

                                    <StackPanel Grid.Row="2"
                                                Grid.Column="1"
                                                Margin="10,0,10,0">
                                        <TextBlock FontSize="11"
                                                   FontWeight="Bold"
                                                   Foreground="{DynamicResource SecondaryTextColor}"
                                                   Text="📈 MAX STOCK LEVEL" />
                                        <TextBlock Margin="0,6,0,0"
                                                   FontSize="18"
                                                   FontWeight="SemiBold"
                                                   Foreground="#10B981"
                                                   Text="{Binding Product.MaxStockLevel}" />
                                    </StackPanel>

                                    <StackPanel Grid.Row="2"
                                                Grid.Column="2"
                                                Margin="10,0,0,0">
                                        <TextBlock FontSize="11"
                                                   FontWeight="Bold"
                                                   Foreground="{DynamicResource SecondaryTextColor}"
                                                   Text="💎 TOTAL VALUE" />
                                        <TextBlock Margin="0,6,0,0"
                                                   FontSize="18"
                                                   FontWeight="SemiBold"
                                                   Foreground="#8B5CF6"
                                                   Text="{Binding TotalStockValue, StringFormat='${0:N2}'}" />
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Border>

                        <!--  Stock by Location Section  -->
                        <Border Margin="0,20,0,0"
                                Padding="20"
                                Background="{DynamicResource CardBackgroundColor}"
                                BorderBrush="{DynamicResource SecondaryBorderColor}"
                                BorderThickness="1"
                                CornerRadius="8">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Width="22"
                                                                Height="22"
                                                                Foreground="#06B6D4"
                                                                Kind="MapMarkerMultiple" />
                                    <TextBlock Margin="10,0,0,0"
                                               VerticalAlignment="Center"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="{DynamicResource PrimaryTextColor}"
                                               Text="Stock by Location" />
                                </StackPanel>

                                <!--  Stock Location DataGrid  -->
                                <DataGrid Margin="0,15,0,0"
                                          AutoGenerateColumns="False"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          CanUserAddRows="False"
                                          CanUserDeleteRows="False"
                                          CanUserReorderColumns="False"
                                          CanUserResizeRows="False"
                                          GridLinesVisibility="None"
                                          HeadersVisibility="Column"
                                          IsReadOnly="True"
                                          ItemsSource="{Binding StockByLocation}"
                                          RowHeight="50"
                                          SelectionMode="Single">
                                    <DataGrid.ColumnHeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="#F1F5F9" />
                                            <Setter Property="Foreground" Value="#64748B" />
                                            <Setter Property="FontWeight" Value="Bold" />
                                            <Setter Property="FontSize" Value="12" />
                                            <Setter Property="Padding" Value="15,10" />
                                            <Setter Property="BorderThickness" Value="0,0,0,2" />
                                            <Setter Property="BorderBrush" Value="#E2E8F0" />
                                        </Style>
                                    </DataGrid.ColumnHeaderStyle>
                                    <DataGrid.RowStyle>
                                        <Style TargetType="DataGridRow">
                                            <Setter Property="Background" Value="Transparent" />
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#F8FAFC" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGrid.RowStyle>
                                    <DataGrid.CellStyle>
                                        <Style TargetType="DataGridCell">
                                            <Setter Property="BorderThickness" Value="0" />
                                            <Setter Property="Padding" Value="15,0" />
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="DataGridCell">
                                                        <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                                                            <ContentPresenter VerticalAlignment="Center" />
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </DataGrid.CellStyle>

                                    <DataGrid.Columns>
                                        <!--  Location Name  -->
                                        <DataGridTemplateColumn Width="2*" Header="LOCATION">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Border Width="8"
                                                                Height="8"
                                                                VerticalAlignment="Center"
                                                                Background="#3B82F6"
                                                                CornerRadius="4" />
                                                        <TextBlock Margin="10,0,0,0"
                                                                   VerticalAlignment="Center"
                                                                   FontSize="14"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="{DynamicResource PrimaryTextColor}"
                                                                   Text="{Binding LocationName}" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>

                                        <!--  Current Stock  -->
                                        <DataGridTemplateColumn Width="*" Header="CURRENT STOCK">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Border Padding="12,6"
                                                            HorizontalAlignment="Left"
                                                            Background="#DBEAFE"
                                                            CornerRadius="6">
                                                        <TextBlock FontSize="14"
                                                                   FontWeight="Bold"
                                                                   Foreground="#1E40AF"
                                                                   Text="{Binding CurrentStock}" />
                                                    </Border>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>

                                        <!--  Available Stock  -->
                                        <DataGridTemplateColumn Width="*" Header="AVAILABLE">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Border Padding="12,6"
                                                            HorizontalAlignment="Left"
                                                            Background="#D1FAE5"
                                                            CornerRadius="6">
                                                        <TextBlock FontSize="14"
                                                                   FontWeight="Bold"
                                                                   Foreground="#065F46"
                                                                   Text="{Binding AvailableStock}" />
                                                    </Border>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>

                                        <!--  Reserved Stock  -->
                                        <DataGridTemplateColumn Width="*" Header="RESERVED">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Border Padding="12,6"
                                                            HorizontalAlignment="Left"
                                                            Background="#FEF3C7"
                                                            CornerRadius="6">
                                                        <TextBlock FontSize="14"
                                                                   FontWeight="Bold"
                                                                   Foreground="#92400E"
                                                                   Text="{Binding ReservedStock}" />
                                                    </Border>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>

                                        <!--  Status  -->
                                        <DataGridTemplateColumn Width="*" Header="STATUS">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Border Padding="10,6" CornerRadius="6">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="Background" Value="#D1FAE5" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsInStock}" Value="False">
                                                                        <Setter Property="Background" Value="#FEE2E2" />
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding IsLowStock}" Value="True">
                                                                        <Setter Property="Background" Value="#FEF3C7" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <TextBlock FontSize="12" FontWeight="Bold">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Text" Value="In Stock" />
                                                                    <Setter Property="Foreground" Value="#065F46" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsInStock}" Value="False">
                                                                            <Setter Property="Text" Value="Out of Stock" />
                                                                            <Setter Property="Foreground" Value="#991B1B" />
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding IsLowStock}" Value="True">
                                                                            <Setter Property="Text" Value="Low Stock" />
                                                                            <Setter Property="Foreground" Value="#92400E" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </Border>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <!--  Empty State  -->
                                <Border Margin="0,15,0,0"
                                        Padding="30"
                                        Background="#F8FAFC"
                                        CornerRadius="8"
                                        Visibility="{Binding HasStockLocations, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                    <StackPanel HorizontalAlignment="Center">
                                        <iconPacks:PackIconMaterial Width="48"
                                                                    Height="48"
                                                                    HorizontalAlignment="Center"
                                                                    Foreground="#94A3B8"
                                                                    Kind="MapMarkerOff" />
                                        <TextBlock Margin="0,10,0,0"
                                                   HorizontalAlignment="Center"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource SecondaryTextColor}"
                                                   Text="No stock locations found" />
                                        <TextBlock Margin="0,5,0,0"
                                                   HorizontalAlignment="Center"
                                                   FontSize="12"
                                                   Foreground="{DynamicResource SecondaryTextColor}"
                                                   Text="This product has not been stocked at any location yet." />
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>

                        <!--  Additional Info Section  -->
                        <Grid Margin="0,20,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  Category & Supplier  -->
                            <Border Grid.Column="0"
                                    Padding="20"
                                    Background="{DynamicResource CardBackgroundColor}"
                                    BorderBrush="{DynamicResource SecondaryBorderColor}"
                                    BorderThickness="1"
                                    CornerRadius="8">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Width="20"
                                                                    Height="20"
                                                                    Foreground="#8B5CF6"
                                                                    Kind="ShapeOutline" />
                                        <TextBlock Margin="8,0,0,0"
                                                   VerticalAlignment="Center"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   Foreground="{DynamicResource PrimaryTextColor}"
                                                   Text="Category" />
                                    </StackPanel>
                                    <TextBlock Margin="0,10,0,5"
                                               FontSize="11"
                                               Foreground="{DynamicResource SecondaryTextColor}"
                                               Text="CATEGORY ID" />
                                    <TextBlock FontSize="14"
                                               Foreground="{DynamicResource PrimaryTextColor}"
                                               Text="{Binding Product.CategoryId}" />
                                    <TextBlock Margin="0,10,0,5"
                                               FontSize="11"
                                               Foreground="{DynamicResource SecondaryTextColor}"
                                               Text="CATEGORY NAME" />
                                    <TextBlock FontSize="16"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource PrimaryTextColor}"
                                               Text="{Binding CategoryName}" />
                                </StackPanel>
                            </Border>

                            <!--  Supplier Info  -->
                            <Border Grid.Column="2"
                                    Padding="20"
                                    Background="{DynamicResource CardBackgroundColor}"
                                    BorderBrush="{DynamicResource SecondaryBorderColor}"
                                    BorderThickness="1"
                                    CornerRadius="8">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Width="20"
                                                                    Height="20"
                                                                    Foreground="#06B6D4"
                                                                    Kind="TruckDeliveryOutline" />
                                        <TextBlock Margin="8,0,0,0"
                                                   VerticalAlignment="Center"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   Foreground="{DynamicResource PrimaryTextColor}"
                                                   Text="Supplier" />
                                    </StackPanel>
                                    <TextBlock Margin="0,10,0,5"
                                               FontSize="11"
                                               Foreground="{DynamicResource SecondaryTextColor}"
                                               Text="SUPPLIER ID" />
                                    <TextBlock FontSize="14"
                                               Foreground="{DynamicResource PrimaryTextColor}"
                                               Text="{Binding Product.SupplierId}" />
                                    <TextBlock Margin="0,10,0,5"
                                               FontSize="11"
                                               Foreground="{DynamicResource SecondaryTextColor}"
                                               Text="SUPPLIER NAME" />
                                    <TextBlock FontSize="16"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource PrimaryTextColor}"
                                               Text="{Binding SupplierName}" />
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!--  Timestamps  -->
                        <Border Margin="0,20,0,0"
                                Padding="20"
                                Background="{DynamicResource CardBackgroundColor}"
                                BorderBrush="{DynamicResource SecondaryBorderColor}"
                                BorderThickness="1"
                                CornerRadius="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Width="18"
                                                                    Height="18"
                                                                    Foreground="#10B981"
                                                                    Kind="CalendarPlus" />
                                        <TextBlock Margin="8,0,0,0"
                                                   VerticalAlignment="Center"
                                                   FontSize="12"
                                                   FontWeight="Bold"
                                                   Foreground="{DynamicResource SecondaryTextColor}"
                                                   Text="CREATED DATE" />
                                    </StackPanel>
                                    <TextBlock Margin="0,8,0,0"
                                               FontSize="15"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource PrimaryTextColor}"
                                               Text="{Binding Product.CreatedDate, StringFormat='MMM dd, yyyy'}" />
                                    <TextBlock Margin="0,2,0,0"
                                               FontSize="12"
                                               Foreground="{DynamicResource SecondaryTextColor}"
                                               Text="{Binding Product.CreatedDate, StringFormat='hh:mm tt'}" />
                                </StackPanel>

                                <StackPanel Grid.Column="1"
                                            Margin="10,0,0,0"
                                            Visibility="{Binding Product.UpdatedDate, Converter={StaticResource NullToVisibilityConverter}}">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Width="18"
                                                                    Height="18"
                                                                    Foreground="#F59E0B"
                                                                    Kind="CalendarEdit" />
                                        <TextBlock Margin="8,0,0,0"
                                                   VerticalAlignment="Center"
                                                   FontSize="12"
                                                   FontWeight="Bold"
                                                   Foreground="{DynamicResource SecondaryTextColor}"
                                                   Text="LAST UPDATED" />
                                    </StackPanel>
                                    <TextBlock Margin="0,8,0,0"
                                               FontSize="15"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource PrimaryTextColor}"
                                               Text="{Binding Product.UpdatedDate, StringFormat='MMM dd, yyyy'}" />
                                    <TextBlock Margin="0,2,0,0"
                                               FontSize="12"
                                               Foreground="{DynamicResource SecondaryTextColor}"
                                               Text="{Binding Product.UpdatedDate, StringFormat='hh:mm tt'}" />
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <!--  Footer Buttons  -->
                <Grid Grid.Row="2" Margin="0,25,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--  Additional Actions  -->
                    <StackPanel Grid.Column="0"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                        <Button Width="140"
                                Height="40"
                                Command="{Binding EditProductCommand}"
                                Style="{DynamicResource EditBtn}">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Width="16"
                                                            Height="16"
                                                            VerticalAlignment="Center"
                                                            Kind="PencilOutline" />
                                <TextBlock Margin="8,0,0,0"
                                           VerticalAlignment="Center"
                                           FontSize="13"
                                           Text="Edit Product" />
                            </StackPanel>
                        </Button>
                        <Button Width="150"
                                Height="40"
                                Margin="10,0,0,0"
                                Command="{Binding AdjustStockCommand}"
                                Style="{DynamicResource CreateBtn}">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Width="16"
                                                            Height="16"
                                                            VerticalAlignment="Center"
                                                            Kind="ChartBoxOutline" />
                                <TextBlock Margin="8,0,0,0"
                                           VerticalAlignment="Center"
                                           FontSize="13"
                                           Text="Adjust Stock" />
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!--  Print Button  -->
                    <Button Grid.Column="1"
                            Width="130"
                            Height="42"
                            Margin="0,0,10,0"
                            Command="{Binding PrintDetailsCommand}"
                            Style="{DynamicResource OpenBtn}">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Width="18"
                                                        Height="18"
                                                        VerticalAlignment="Center"
                                                        Kind="PrinterOutline" />
                            <TextBlock Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       FontSize="14"
                                       Text="Print" />
                        </StackPanel>
                    </Button>

                    <!--  Close Button  -->
                    <Button Grid.Column="2"
                            Width="130"
                            Height="42"
                            Command="{Binding CloseCommand}"
                            Style="{DynamicResource CancelBtn}">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Width="18"
                                                        Height="18"
                                                        VerticalAlignment="Center"
                                                        Kind="Check" />
                            <TextBlock Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Text="Close" />
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</views:MvxWpfView>