<views:MvxApplication x:Class="Storix.Presentation.App"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:resources="clr-namespace:Storix.Presentation.Resources"
                      xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf">
    <views:MvxApplication.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="ToVisibilityConverter" />
            <resources:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
            <resources:EditModeToTextConverter x:Key="EditModeToTextConverter" />
            <resources:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
            <resources:NullToBoolConverter x:Key="NullToBoolConverter" />
            <resources:ErrorConverter x:Key="ErrorConverter" />
            <resources:IntToVisibilityConverter x:Key="IntToVisibilityConverter" />
            <resources:LongDateConverter x:Key="LongDateConverter" />
            <resources:ShortDateConverter x:Key="ShortDateConverter" />
            <resources:RadioButtonConverter x:Key="RadioButtonConverter" />

            <ResourceDictionary.MergedDictionaries>
                <!--  Default theme of application  -->
                <ResourceDictionary Source="Themes/LightTheme.xaml" />

                <ResourceDictionary Source="Assets/Icons/Icons.xaml" />
                <ResourceDictionary Source="Styles/ButtonStyle.xaml" />
                <ResourceDictionary Source="Styles/NavigationButtons.xaml" />
                <ResourceDictionary Source="Styles/DataGridStyles.xaml" />
                <ResourceDictionary Source="Styles/CommonCtrls.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </views:MvxApplication.Resources>
</views:MvxApplication>