<views:MvxWpfView x:Class="Storix.Presentation.Deletion.ProductDeleteConfirmation"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                  xmlns:loadingSpinnerControl="clr-namespace:LoadingSpinnerControl;assembly=LoadingSpinnerControl"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:products="clr-namespace:Storix.Core.ViewModels.Products;assembly=Storix.Core"
                  xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
                  d:DataContext="{d:DesignInstance Type=products:ProductDeleteViewModel,
                                                   IsDesignTimeCreatable=True}"
                  d:DesignHeight="auto"
                  d:DesignWidth="600"
                  mc:Ignorable="d">
    <Border Padding="30"
            Background="{DynamicResource PrimaryBackgroundColor}"
            BorderBrush="{DynamicResource SecondaryBorderColor}"
            BorderThickness="1"
            CornerRadius="12">
        <Grid>
            <!--  Loading Overlay  -->
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="{Binding IsLoading, Converter={StaticResource ToVisibilityConverter}, UpdateSourceTrigger=PropertyChanged}">
                <loadingSpinnerControl:LoadingSpinner Diameter="80"
                                                      IsLoading="{Binding IsLoading}"
                                                      Thickness="3" />
                <TextBlock Margin="0,10"
                           FontFamily="Californian FB"
                           FontSize="14"
                           Foreground="{DynamicResource SecondaryTextColor}"
                           Text="Deleting product..."
                           TextAlignment="Center" />
            </StackPanel>

            <!--  Main Content  -->
            <Grid Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}, ConverterParameter=true, UpdateSourceTrigger=PropertyChanged}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Header Section with Warning  -->
                <Border Grid.Row="0"
                        Margin="0,0,0,20"
                        Padding="20"
                        Background="#FEE2E2"
                        BorderBrush="#EF4444"
                        BorderThickness="2"
                        CornerRadius="12">
                    <StackPanel>
                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Width="32"
                                                        Height="32"
                                                        Foreground="#DC2626"
                                                        Kind="AlertCircle" />
                            <TextBlock Margin="12,0,0,0"
                                       VerticalAlignment="Center"
                                       FontFamily="Californian FB"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="#991B1B"
                                       Text="Delete Product?" />
                        </StackPanel>
                        <TextBlock Margin="0,10,0,0"
                                   HorizontalAlignment="Center"
                                   FontSize="14"
                                   Foreground="#991B1B"
                                   Text="This action cannot be undone. Please review the details carefully."
                                   TextAlignment="Center"
                                   TextWrapping="Wrap" />
                    </StackPanel>
                </Border>

                <!--  Product Details  -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!--  Product Overview Card  -->
                        <Border Padding="20"
                                Background="{DynamicResource CardBackgroundColor}"
                                BorderBrush="{DynamicResource SecondaryBorderColor}"
                                BorderThickness="1"
                                CornerRadius="8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!--  Product Name & SKU  -->
                                <StackPanel Grid.Row="0">
                                    <TextBlock FontSize="20"
                                               FontWeight="Bold"
                                               Foreground="{DynamicResource PrimaryTextColor}"
                                               Text="{Binding Product.Name}"
                                               TextWrapping="Wrap" />
                                    <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                                        <Border Padding="8,4"
                                                Background="#DBEAFE"
                                                CornerRadius="6">
                                            <TextBlock FontFamily="Consolas"
                                                       FontSize="12"
                                                       FontWeight="Bold"
                                                       Foreground="#1E40AF"
                                                       Text="{Binding Product.SKU}" />
                                        </Border>
                                        <Border Margin="8,0,0,0"
                                                Padding="8,4"
                                                Background="#FEF3C7"
                                                CornerRadius="6"
                                                Visibility="{Binding Product.Barcode, Converter={StaticResource NullToVisibilityConverter}}">
                                            <StackPanel Orientation="Horizontal">
                                                <iconPacks:PackIconMaterial Width="12"
                                                                            Height="12"
                                                                            VerticalAlignment="Center"
                                                                            Foreground="#92400E"
                                                                            Kind="Barcode" />
                                                <TextBlock Margin="4,0,0,0"
                                                           FontFamily="Consolas"
                                                           FontSize="12"
                                                           Foreground="#92400E"
                                                           Text="{Binding Product.Barcode}" />
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </StackPanel>

                                <!--  Description  -->
                                <Border Grid.Row="1"
                                        Margin="0,15,0,0"
                                        Padding="12"
                                        Background="{DynamicResource InfoBackgroundColor}"
                                        BorderBrush="{DynamicResource InfoBorderColor}"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Visibility="{Binding Product.Description, Converter={StaticResource NullToVisibilityConverter}}">
                                    <TextBlock FontSize="13"
                                               Foreground="{DynamicResource SecondaryTextColor}"
                                               Text="{Binding Product.Description}"
                                               TextWrapping="Wrap" />
                                </Border>

                                <!--  Product Details Grid  -->
                                <Grid Grid.Row="2" Margin="0,20,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!--  Pricing Information  -->
                                    <StackPanel Grid.Row="0"
                                                Grid.Column="0"
                                                Margin="0,0,10,15">
                                        <TextBlock FontSize="11"
                                                   Foreground="{DynamicResource SecondaryTextColor}"
                                                   Text="💰 SELLING PRICE" />
                                        <TextBlock Margin="0,4,0,0"
                                                   FontSize="18"
                                                   FontWeight="Bold"
                                                   Foreground="#10B981"
                                                   Text="{Binding Product.Price, StringFormat='${0:N2}'}" />
                                    </StackPanel>

                                    <StackPanel Grid.Row="0"
                                                Grid.Column="1"
                                                Margin="10,0,0,15">
                                        <TextBlock FontSize="11"
                                                   Foreground="{DynamicResource SecondaryTextColor}"
                                                   Text="💵 COST PRICE" />
                                        <TextBlock Margin="0,4,0,0"
                                                   FontSize="18"
                                                   FontWeight="Bold"
                                                   Foreground="#F59E0B"
                                                   Text="{Binding Product.Cost, StringFormat='${0:N2}'}" />
                                    </StackPanel>

                                    <!--  Stock Levels  -->
                                    <StackPanel Grid.Row="1"
                                                Grid.Column="0"
                                                Margin="0,0,10,15">
                                        <TextBlock FontSize="11"
                                                   Foreground="{DynamicResource SecondaryTextColor}"
                                                   Text="📉 MIN STOCK LEVEL" />
                                        <TextBlock Margin="0,4,0,0"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource PrimaryTextColor}"
                                                   Text="{Binding Product.MinStockLevel}" />
                                    </StackPanel>

                                    <StackPanel Grid.Row="1"
                                                Grid.Column="1"
                                                Margin="10,0,0,15">
                                        <TextBlock FontSize="11"
                                                   Foreground="{DynamicResource SecondaryTextColor}"
                                                   Text="📈 MAX STOCK LEVEL" />
                                        <TextBlock Margin="0,4,0,0"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource PrimaryTextColor}"
                                                   Text="{Binding Product.MaxStockLevel}" />
                                    </StackPanel>

                                    <!--  IDs  -->
                                    <StackPanel Grid.Row="2"
                                                Grid.Column="0"
                                                Margin="0,0,10,15">
                                        <TextBlock FontSize="11"
                                                   Foreground="{DynamicResource SecondaryTextColor}"
                                                   Text="🏷️ CATEGORY ID" />
                                        <TextBlock Margin="0,4,0,0"
                                                   FontSize="14"
                                                   Foreground="{DynamicResource SecondaryTextColor}"
                                                   Text="{Binding Product.CategoryId}" />
                                    </StackPanel>

                                    <StackPanel Grid.Row="2"
                                                Grid.Column="1"
                                                Margin="10,0,0,15">
                                        <TextBlock FontSize="11"
                                                   Foreground="{DynamicResource SecondaryTextColor}"
                                                   Text="🏢 SUPPLIER ID" />
                                        <TextBlock Margin="0,4,0,0"
                                                   FontSize="14"
                                                   Foreground="{DynamicResource SecondaryTextColor}"
                                                   Text="{Binding Product.SupplierId}" />
                                    </StackPanel>

                                    <!--  Dates  -->
                                    <StackPanel Grid.Row="3"
                                                Grid.Column="0"
                                                Margin="0,0,10,0">
                                        <TextBlock FontSize="11"
                                                   Foreground="{DynamicResource SecondaryTextColor}"
                                                   Text="📅 CREATED DATE" />
                                        <TextBlock Margin="0,4,0,0"
                                                   FontSize="13"
                                                   Foreground="{DynamicResource SecondaryTextColor}"
                                                   Text="{Binding Product.CreatedDate, StringFormat='MMM dd, yyyy - hh:mm tt'}" />
                                    </StackPanel>

                                    <StackPanel Grid.Row="3"
                                                Grid.Column="1"
                                                Margin="10,0,0,0"
                                                Visibility="{Binding Product.UpdatedDate, Converter={StaticResource NullToVisibilityConverter}}">
                                        <TextBlock FontSize="11"
                                                   Foreground="{DynamicResource SecondaryTextColor}"
                                                   Text="🔄 LAST UPDATED" />
                                        <TextBlock Margin="0,4,0,0"
                                                   FontSize="13"
                                                   Foreground="{DynamicResource SecondaryTextColor}"
                                                   Text="{Binding Product.UpdatedDate, StringFormat='MMM dd, yyyy - hh:mm tt'}" />
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Border>

                        <!--  Warning Message  -->
                        <Border Margin="0,20,0,0"
                                Padding="15"
                                Background="#FFFBEB"
                                BorderBrush="#F59E0B"
                                BorderThickness="1"
                                CornerRadius="8">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Width="18"
                                                                Height="18"
                                                                Foreground="#D97706"
                                                                Kind="AlertOutline" />
                                    <TextBlock Margin="8,0,0,0"
                                               FontSize="13"
                                               FontWeight="Bold"
                                               Foreground="#92400E"
                                               Text="Important Notice" />
                                </StackPanel>
                                <TextBlock Margin="0,8,0,0"
                                           FontSize="12"
                                           Foreground="#78350F"
                                           TextWrapping="Wrap">
                                    <Run Text="• All associated stock records will be affected" />
                                    <LineBreak />
                                    <Run Text="• Historical data may be retained for reporting" />
                                    <LineBreak />
                                    <Run Text="• This product will be removed from active inventory" />
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <!--  Footer Buttons  -->
                <Grid Grid.Row="2" Margin="0,25,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--  Product ID  -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock FontSize="11" Foreground="{DynamicResource SecondaryTextColor}">
                            <Run Text="Product ID:" />
                            <Run FontWeight="Bold" Text="{Binding Product.ProductId}" />
                        </TextBlock>
                    </StackPanel>

                    <!--  Cancel Button  -->
                    <Button Grid.Column="1"
                            Width="130"
                            Height="42"
                            Margin="0,0,10,0"
                            Command="{Binding CancelCommand}"
                            Style="{DynamicResource CancelBtn}">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Width="18"
                                                        Height="18"
                                                        VerticalAlignment="Center"
                                                        Kind="Close" />
                            <TextBlock Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       FontSize="14"
                                       Text="Cancel" />
                        </StackPanel>
                    </Button>

                    <!--  Delete Button  -->
                    <Button Grid.Column="2"
                            Width="150"
                            Height="42"
                            Command="{Binding DeleteCommand}">
                        <Button.Style>
                            <Style BasedOn="{StaticResource CreateBtn}" TargetType="Button">
                                <Setter Property="Background" Value="#DC2626" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#B91C1C" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Width="18"
                                                        Height="18"
                                                        VerticalAlignment="Center"
                                                        Kind="DeleteForever" />
                            <TextBlock Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Text="Delete Product" />
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</views:MvxWpfView>