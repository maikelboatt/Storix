<views:MvxWpfView x:Class="Storix.Presentation.Deletion.CategoryDeleteConfirmation"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:categories="clr-namespace:Storix.Core.ViewModels.Categories;assembly=Storix.Core"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                  xmlns:loadingSpinnerControl="clr-namespace:LoadingSpinnerControl;assembly=LoadingSpinnerControl"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
                  d:DataContext="{d:DesignInstance Type=categories:CategoryDeleteViewModel,
                                                   IsDesignTimeCreatable=True}"
                  d:DesignHeight="auto"
                  d:DesignWidth="600"
                  mc:Ignorable="d">
    <Border Padding="30"
            Background="{DynamicResource PrimaryBackgroundColor}"
            BorderBrush="{DynamicResource SecondaryBorderColor}"
            BorderThickness="1"
            CornerRadius="12">
        <Grid>
            <!--  Loading Overlay  -->
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="{Binding IsLoading, Converter={StaticResource ToVisibilityConverter}, UpdateSourceTrigger=PropertyChanged}">
                <loadingSpinnerControl:LoadingSpinner Diameter="80"
                                                      IsLoading="{Binding IsLoading}"
                                                      Thickness="3" />
                <TextBlock Margin="0,10"
                           FontFamily="Californian FB"
                           FontSize="14"
                           Foreground="{DynamicResource SecondaryTextColor}"
                           Text="Deleting product..."
                           TextAlignment="Center" />
            </StackPanel>

            <!--  Main Content  -->
            <Grid Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}, ConverterParameter=true, UpdateSourceTrigger=PropertyChanged}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Header Section with Warning  -->
                <Border Grid.Row="0"
                        Margin="0,0,0,20"
                        Padding="20"
                        Background="#FEE2E2"
                        BorderBrush="#EF4444"
                        BorderThickness="2"
                        CornerRadius="12">
                    <StackPanel>
                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Width="32"
                                                        Height="32"
                                                        Foreground="#DC2626"
                                                        Kind="AlertCircle" />
                            <TextBlock Margin="12,0,0,0"
                                       VerticalAlignment="Center"
                                       FontFamily="Californian FB"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="#991B1B"
                                       Text="Delete Category?" />
                        </StackPanel>
                        <TextBlock Margin="0,10,0,0"
                                   HorizontalAlignment="Center"
                                   FontSize="14"
                                   Foreground="#991B1B"
                                   Text="This action cannot be undone. Please review the details carefully."
                                   TextAlignment="Center"
                                   TextWrapping="Wrap" />
                    </StackPanel>
                </Border>

                <!--  Product Details  -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!--  Product Overview Card  -->
                        <Border Padding="20"
                                Background="{DynamicResource CardBackgroundColor}"
                                BorderBrush="{DynamicResource SecondaryBorderColor}"
                                BorderThickness="1"
                                CornerRadius="8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!--  Category Name  -->
                                <StackPanel Grid.Row="0">
                                    <TextBlock FontSize="20"
                                               FontWeight="Bold"
                                               Foreground="{DynamicResource PrimaryTextColor}"
                                               Text="{Binding Category.Name}"
                                               TextWrapping="Wrap" />
                                </StackPanel>

                                <!--  Description  -->
                                <Border Grid.Row="1"
                                        Margin="0,15,0,0"
                                        Padding="12"
                                        Background="{DynamicResource InfoBackgroundColor}"
                                        BorderBrush="{DynamicResource InfoBorderColor}"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Visibility="{Binding Category.Description, Converter={StaticResource NullToVisibilityConverter}}">
                                    <TextBlock FontSize="13"
                                               Foreground="{DynamicResource SecondaryTextColor}"
                                               Text="{Binding Category.Description}"
                                               TextWrapping="Wrap" />
                                </Border>

                                <!--  Category Details Grid  -->
                                <Grid Grid.Row="2" Margin="0,20,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!--  Image Url  -->
                                    <StackPanel Grid.Row="0"
                                                Grid.Column="0"
                                                Margin="0,0,10,15">
                                        <TextBlock FontSize="11"
                                                   Foreground="{DynamicResource SecondaryTextColor}"
                                                   Text="🖼️ Image URL" />
                                        <TextBlock Margin="0,4,0,0"
                                                   FontSize="18"
                                                   FontWeight="Bold"
                                                   Foreground="#10B981"
                                                   Text="{Binding Category.ImageUrl, StringFormat='${0:N2}'}" />
                                    </StackPanel>


                                    <!--  Image Preview  -->
                                    <Border Grid.Row="1"
                                            Height="150"
                                            Margin="20,10"
                                            Background="{DynamicResource SecondaryBackgroundColor}"
                                            BorderBrush="{DynamicResource SecondaryBorderColor}"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Visibility="{Binding HasImageUrl, Converter={StaticResource ToVisibilityConverter}}">
                                        <Grid>
                                            <TextBlock HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       FontSize="12"
                                                       Foreground="{DynamicResource SecondaryTextColor}"
                                                       Text="Image Preview"
                                                       Visibility="{Binding IsImageLoading, Converter={StaticResource ToVisibilityConverter}}" />

                                            <Image Margin="10"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Source="{Binding Category.ImageUrl, Mode=OneWay}"
                                                   Stretch="Uniform" />
                                        </Grid>
                                    </Border>


                                    <!--  Parent Category  -->
                                    <StackPanel Grid.Row="2"
                                                Grid.Column="0"
                                                Margin="0,0,10,15">
                                        <TextBlock FontSize="11"
                                                   Foreground="{DynamicResource SecondaryTextColor}"
                                                   Text="📛 Parent Category" />
                                        <TextBlock Margin="0,4,0,0"
                                                   FontSize="14"
                                                   Foreground="{DynamicResource SecondaryTextColor}"
                                                   Text="{Binding ParentCategoryName}" />
                                    </StackPanel>


                                </Grid>
                            </Grid>
                        </Border>

                        <!--  Warning Message  -->
                        <Border Margin="0,20,0,0"
                                Padding="15"
                                Background="#FFFBEB"
                                BorderBrush="#F59E0B"
                                BorderThickness="1"
                                CornerRadius="8">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Width="18"
                                                                Height="18"
                                                                Foreground="#D97706"
                                                                Kind="AlertOutline" />
                                    <TextBlock Margin="8,0,0,0"
                                               FontSize="13"
                                               FontWeight="Bold"
                                               Foreground="#92400E"
                                               Text="Important Notice" />
                                </StackPanel>
                                <TextBlock Margin="0,8,0,0"
                                           FontSize="12"
                                           Foreground="#78350F"
                                           TextWrapping="Wrap">
                                    <Run Text="• All associated stock records will be affected" />
                                    <LineBreak />
                                    <Run Text="• Historical data may be retained for reporting" />
                                    <LineBreak />
                                    <Run Text="• This category will be removed from active inventory" />
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <!--  Footer Buttons  -->
                <Grid Grid.Row="2" Margin="0,25,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <!--  Category ID  -->
                        <StackPanel Margin="0,0,0,5" VerticalAlignment="Center">
                            <TextBlock FontSize="11" Foreground="{DynamicResource SecondaryTextColor}">
                                <Run Text="Category ID:" />
                                <Run FontWeight="Bold" Text="{Binding Category.CategoryId}" />
                            </TextBlock>
                        </StackPanel>

                        <!--  Parent Category ID  -->
                        <StackPanel Margin="0,5,0,0" VerticalAlignment="Center">
                            <TextBlock FontSize="11" Foreground="{DynamicResource SecondaryTextColor}">
                                <Run Text="Parent Category ID:" />
                                <Run FontWeight="Bold" Text="{Binding Category.ParentCategoryId}" />
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>

                    <!--  Cancel Button  -->
                    <Button Grid.Column="1"
                            Width="130"
                            Height="42"
                            Margin="0,0,10,0"
                            Command="{Binding CancelCommand}"
                            Style="{DynamicResource CancelBtn}">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Width="18"
                                                        Height="18"
                                                        VerticalAlignment="Center"
                                                        Kind="Close" />
                            <TextBlock Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       FontSize="14"
                                       Text="Cancel" />
                        </StackPanel>
                    </Button>

                    <!--  Delete Button  -->
                    <Button Grid.Column="2"
                            Width="150"
                            Height="42"
                            Command="{Binding DeleteCommand}">
                        <Button.Style>
                            <Style BasedOn="{StaticResource CreateBtn}" TargetType="Button">
                                <Setter Property="Background" Value="#DC2626" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#B91C1C" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Width="18"
                                                        Height="18"
                                                        VerticalAlignment="Center"
                                                        Kind="DeleteForever" />
                            <TextBlock Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Text="Delete Category" />
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</views:MvxWpfView>