<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Dark Theme Color Scheme  -->
    <!--  This dictionary provides dark theme colors that match the light theme structure  -->

    <!--  Background Colors  -->
    <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="#0F172A" />
    <!--  Main background - very dark blue  -->
    <SolidColorBrush x:Key="SecondaryBackgroundColor" Color="#1E293B" />
    <!--  Sidebar/card background - dark slate  -->
    <SolidColorBrush x:Key="TertiaryBackgroundColor" Color="#334155" />
    <!--  Elevated surfaces  -->

    <!--  Text Colors  -->
    <SolidColorBrush x:Key="PrimaryTextColor" Color="#F1F5F9" />
    <!--  Main text - light gray  -->
    <SolidColorBrush x:Key="SecondaryTextColor" Color="#94A3B8" />
    <!--  Secondary text - muted gray  -->
    <SolidColorBrush x:Key="TertiaryTextColor" Color="#CBD5E1" />
    <!--  Tertiary text  -->
    <SolidColorBrush x:Key="TextFourthColor" Color="#64748B" />
    <!--  Dimmed text  -->

    <!--  Border Colors  -->
    <SolidColorBrush x:Key="SecondaryBorderColor" Color="#475569" />
    <!--  Borders and dividers  -->

    <!--  Info Panel Colors  -->
    <SolidColorBrush x:Key="InfoBackgroundColor" Color="#1E3A5F" />
    <!--  Info panel background  -->
    <SolidColorBrush x:Key="InfoBorderColor" Color="#3B82F6" />
    <!--  Info panel border  -->
    <SolidColorBrush x:Key="InfoIconColor" Color="#60A5FA" />
    <!--  Info icon color  -->
    <SolidColorBrush x:Key="InfoTextColor" Color="#BFDBFE" />
    <!--  Info text color  -->

    <!--  Button Colors  -->
    <SolidColorBrush x:Key="CreateBtnBackgroundColor" Color="#3B82F6" />
    <!--  Primary blue button  -->
    <SolidColorBrush x:Key="CreateBtnHoverColor" Color="#2563EB" />
    <!--  Button hover  -->
    <SolidColorBrush x:Key="CreateBtnPressedColor" Color="#1D4ED8" />
    <!--  Button pressed  -->

    <SolidColorBrush x:Key="CancelBtnBackgroundColor" Color="#EF4444" />
    <!--  Cancel/Delete button  -->
    <SolidColorBrush x:Key="CancelBtnHoverColor" Color="#DC2626" />
    <!--  Cancel hover  -->
    <SolidColorBrush x:Key="CancelBtnPressedColor" Color="#B91C1C" />
    <!--  Cancel pressed  -->

    <SolidColorBrush x:Key="EditBtnBackgroundColor" Color="#F59E0B" />
    <!--  Edit button  -->
    <SolidColorBrush x:Key="EditBtnHoverColor" Color="#D97706" />
    <!--  Edit hover  -->
    <SolidColorBrush x:Key="EditBtnPressedColor" Color="#B45309" />
    <!--  Edit pressed  -->

    <SolidColorBrush x:Key="DelBtnBackgroundColor" Color="#EF4444" />
    <!--  Delete button  -->
    <SolidColorBrush x:Key="DelBtnHoverColor" Color="#DC2626" />
    <!--  Delete hover  -->
    <SolidColorBrush x:Key="DelBtnPressedColor" Color="#B91C1C" />
    <!--  Delete pressed  -->

    <!--  Blue Colors  -->
    <SolidColorBrush x:Key="PrimaryBlueColor" Color="#3B82F6" />
    <!--  Primary brand blue  -->
    <SolidColorBrush x:Key="SecondaryBlueColor" Color="#60A5FA" />
    <!--  Lighter blue  -->
    <SolidColorBrush x:Key="TertiaryBlueColor" Color="#93C5FD" />
    <!--  Very light blue  -->

    <!--  Red Colors  -->
    <SolidColorBrush x:Key="PrimaryRedColor" Color="#EF4444" />
    <!--  Primary red  -->
    <SolidColorBrush x:Key="SecondaryRedColor" Color="#F87171" />
    <!--  Lighter red  -->
    <SolidColorBrush x:Key="TertiaryRedColor" Color="#FCA5A5" />
    <!--  Very light red  -->

    <!--  Green Colors  -->
    <SolidColorBrush x:Key="PrimaryGreenColor" Color="#10B981" />
    <!--  Primary green  -->
    <SolidColorBrush x:Key="SecondaryGreenColor" Color="#34D399" />
    <!--  Lighter green  -->
    <SolidColorBrush x:Key="TertiaryGreenColor" Color="#6EE7B7" />
    <!--  Very light green  -->

    <!--  Orange Colors  -->
    <SolidColorBrush x:Key="PrimaryOrangeColor" Color="#F59E0B" />
    <!--  Primary orange  -->
    <SolidColorBrush x:Key="SecondaryOrangeColor" Color="#FBBF24" />
    <!--  Lighter orange  -->
    <SolidColorBrush x:Key="TertiaryOrangeColor" Color="#FCD34D" />
    <!--  Very light orange  -->

    <!--  Yellow Colors  -->
    <SolidColorBrush x:Key="PrimaryYellowColor" Color="#EAB308" />
    <!--  Primary yellow  -->
    <SolidColorBrush x:Key="SecondaryYellowColor" Color="#FACC15" />
    <!--  Lighter yellow  -->
    <SolidColorBrush x:Key="TertiaryYellowColor" Color="#FDE047" />
    <!--  Very light yellow  -->

    <!--  Teal Colors  -->
    <SolidColorBrush x:Key="PrimaryTealColor" Color="#14B8A6" />
    <!--  Primary teal  -->
    <SolidColorBrush x:Key="SecondaryTealColor" Color="#2DD4BF" />
    <!--  Lighter teal  -->
    <SolidColorBrush x:Key="TertiaryTealColor" Color="#5EEAD4" />
    <!--  Very light teal  -->

    <!--  White/Light Colors  -->
    <SolidColorBrush x:Key="PrimaryWhiteColor" Color="#F1F5F9" />
    <!--  Off white  -->
    <SolidColorBrush x:Key="SecondaryWhiteColor" Color="#E2E8F0" />
    <!--  Light gray  -->
    <SolidColorBrush x:Key="TertiaryWhiteColor" Color="#CBD5E1" />
    <!--  Medium gray  -->

    <!--  Black/Dark Colors  -->
    <SolidColorBrush x:Key="PrimaryBlackColor" Color="#0F172A" />
    <!--  Very dark blue  -->
    <SolidColorBrush x:Key="SecondaryBlackColor" Color="#1E293B" />
    <!--  Dark slate  -->
    <SolidColorBrush x:Key="TertiaryBlackColor" Color="#334155" />
    <!--  Lighter dark  -->

    <!--  TextBox Colors  -->
    <SolidColorBrush x:Key="PrimaryTextBoxBackgroundColor" Color="#1E293B" />
    <!--  TextBox background  -->
    <SolidColorBrush x:Key="SecondaryTextBoxGrayColor" Color="#475569" />
    <!--  TextBox border  -->
    <SolidColorBrush x:Key="PrimaryTextColor2" Color="#F1F5F9" />
    <!--  TextBox text  -->

    <!--  Icon Colors  -->
    <SolidColorBrush x:Key="IconColor" Color="#94A3B8" />
    <!--  Icon color  -->

    <!--  Control Colors  -->
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#1E293B" />
    <!--  Control background  -->
    <SolidColorBrush x:Key="BorderBrush" Color="#475569" />
    <!--  Control border  -->
    <SolidColorBrush x:Key="ForegroundBrush" Color="#F1F5F9" />
    <!--  Control foreground  -->
    <SolidColorBrush x:Key="PlaceholderTextBrush" Color="#64748B" />
    <!--  Placeholder text  -->
    <SolidColorBrush x:Key="AccentBrush" Color="#3B82F6" />
    <!--  Accent color  -->
    <SolidColorBrush x:Key="IconBrush" Color="#94A3B8" />
    <!--  Icon brush  -->

    <!--  Card & Panel Colors  -->
    <SolidColorBrush x:Key="CardBackgroundColor" Color="#1E293B" />
    <!--  Card background - Dark slate  -->
    <SolidColorBrush x:Key="CardBorderColor" Color="#334155" />
    <!--  Card border - Lighter dark  -->
    <SolidColorBrush x:Key="ChartPlaceholderBackground" Color="#0F172A" />
    <!--  Chart placeholder background - Very dark  -->

    <!--  Header Colors  -->
    <SolidColorBrush x:Key="PrimaryHeaderColor" Color="#F1F5F9" />
    <!--  Main headers - Light gray  -->
    <SolidColorBrush x:Key="SecondaryHeaderColor" Color="#94A3B8" />
    <!--  Subheaders - Muted gray  -->

</ResourceDictionary>