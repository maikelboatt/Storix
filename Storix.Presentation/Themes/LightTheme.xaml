<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Light Theme Color Scheme  -->
    <!--  This dictionary provides light theme colors  -->

    <!--  Background Colors  -->
    <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="#FFFFFF" />
    <!--  Main background - white  -->
    <SolidColorBrush x:Key="SecondaryBackgroundColor" Color="#F8FAFC" />
    <!--  Sidebar/card background - light gray  -->
    <SolidColorBrush x:Key="TertiaryBackgroundColor" Color="#F1F5F9" />
    <!--  Elevated surfaces  -->

    <!--  Text Colors  -->
    <SolidColorBrush x:Key="PrimaryTextColor" Color="#1E293B" />
    <!--  Main text - dark slate  -->
    <SolidColorBrush x:Key="SecondaryTextColor" Color="#64748B" />
    <!--  Secondary text - gray  -->
    <SolidColorBrush x:Key="TertiaryTextColor" Color="#475569" />
    <!--  Tertiary text  -->
    <SolidColorBrush x:Key="TextFourthColor" Color="#94A3B8" />
    <!--  Dimmed text  -->

    <!--  Border Colors  -->
    <SolidColorBrush x:Key="SecondaryBorderColor" Color="#E2E8F0" />
    <!--  Borders and dividers  -->

    <!--  Info Panel Colors  -->
    <SolidColorBrush x:Key="InfoBackgroundColor" Color="#DBEAFE" />
    <!--  Info panel background  -->
    <SolidColorBrush x:Key="InfoBorderColor" Color="#3B82F6" />
    <!--  Info panel border  -->
    <SolidColorBrush x:Key="InfoIconColor" Color="#2563EB" />
    <!--  Info icon color  -->
    <SolidColorBrush x:Key="InfoTextColor" Color="#1E40AF" />
    <!--  Info text color  -->

    <!--  Button Colors  -->
    <SolidColorBrush x:Key="CreateBtnBackgroundColor" Color="#3B82F6" />
    <!--  Primary blue button  -->
    <SolidColorBrush x:Key="CreateBtnHoverColor" Color="#2563EB" />
    <!--  Button hover  -->
    <SolidColorBrush x:Key="CreateBtnPressedColor" Color="#1D4ED8" />
    <!--  Button pressed  -->

    <SolidColorBrush x:Key="CancelBtnBackgroundColor" Color="#EF4444" />
    <!--  Cancel/Delete button  -->
    <SolidColorBrush x:Key="CancelBtnHoverColor" Color="#DC2626" />
    <!--  Cancel hover  -->
    <SolidColorBrush x:Key="CancelBtnPressedColor" Color="#B91C1C" />
    <!--  Cancel pressed  -->

    <SolidColorBrush x:Key="EditBtnBackgroundColor" Color="#F59E0B" />
    <!--  Edit button  -->
    <SolidColorBrush x:Key="EditBtnHoverColor" Color="#D97706" />
    <!--  Edit hover  -->
    <SolidColorBrush x:Key="EditBtnPressedColor" Color="#B45309" />
    <!--  Edit pressed  -->

    <SolidColorBrush x:Key="DelBtnBackgroundColor" Color="#EF4444" />
    <!--  Delete button  -->
    <SolidColorBrush x:Key="DelBtnHoverColor" Color="#DC2626" />
    <!--  Delete hover  -->
    <SolidColorBrush x:Key="DelBtnPressedColor" Color="#B91C1C" />
    <!--  Delete pressed  -->

    <!--  Blue Colors  -->
    <SolidColorBrush x:Key="PrimaryBlueColor" Color="#004FC4" />
    <!--  Primary brand blue  -->
    <SolidColorBrush x:Key="SecondaryBlueColor" Color="#0063F7" />
    <!--  Brighter blue  -->
    <SolidColorBrush x:Key="TertiaryBlueColor" Color="#5B8DEF" />
    <!--  Light blue  -->

    <!--  Red Colors  -->
    <SolidColorBrush x:Key="PrimaryRedColor" Color="#E63535" />
    <!--  Primary red  -->
    <SolidColorBrush x:Key="SecondaryRedColor" Color="#FF3B3B" />
    <!--  Bright red  -->
    <SolidColorBrush x:Key="TertiaryRedColor" Color="#FF5C5C" />
    <!--  Light red  -->

    <!--  Green Colors  -->
    <SolidColorBrush x:Key="PrimaryGreenColor" Color="#05A660" />
    <!--  Primary green  -->
    <SolidColorBrush x:Key="SecondaryGreenColor" Color="#06C270" />
    <!--  Bright green  -->
    <SolidColorBrush x:Key="TertiaryGreenColor" Color="#39D98A" />
    <!--  Light green  -->

    <!--  Orange Colors  -->
    <SolidColorBrush x:Key="PrimaryOrangeColor" Color="#E67A00" />
    <!--  Primary orange  -->
    <SolidColorBrush x:Key="SecondaryOrangeColor" Color="#FF8800" />
    <!--  Bright orange  -->
    <SolidColorBrush x:Key="TertiaryOrangeColor" Color="#FDAC42" />
    <!--  Light orange  -->

    <!--  Yellow Colors  -->
    <SolidColorBrush x:Key="PrimaryYellowColor" Color="#E6B800" />
    <!--  Primary yellow  -->
    <SolidColorBrush x:Key="SecondaryYellowColor" Color="#FFCC00" />
    <!--  Bright yellow  -->
    <SolidColorBrush x:Key="TertiaryYellowColor" Color="#FDDD48" />
    <!--  Light yellow  -->

    <!--  Teal Colors  -->
    <SolidColorBrush x:Key="PrimaryTealColor" Color="#00B7C4" />
    <!--  Primary teal  -->
    <SolidColorBrush x:Key="SecondaryTealColor" Color="#00CFDE" />
    <!--  Bright teal  -->
    <SolidColorBrush x:Key="TertiaryTealColor" Color="#73DFE7" />
    <!--  Light teal  -->

    <!--  White/Light Colors  -->
    <SolidColorBrush x:Key="PrimaryWhiteColor" Color="#C0C9EA" />
    <!--  Off white with blue tint  -->
    <SolidColorBrush x:Key="SecondaryWhiteColor" Color="#EDF4FF" />
    <!--  Very light blue  -->
    <SolidColorBrush x:Key="TertiaryWhiteColor" Color="#FFFFFF" />
    <!--  Pure white  -->

    <!--  Black/Dark Colors  -->
    <SolidColorBrush x:Key="PrimaryBlackColor" Color="#0E1A32" />
    <!--  Very dark blue  -->
    <SolidColorBrush x:Key="SecondaryBlackColor" Color="#102341" />
    <!--  Dark blue  -->
    <SolidColorBrush x:Key="TertiaryBlackColor" Color="#1C3254" />
    <!--  Medium dark blue  -->

    <!--  TextBox Colors  -->
    <SolidColorBrush x:Key="PrimaryTextBoxBackgroundColor" Color="#FFFFFF" />
    <!--  TextBox background  -->
    <SolidColorBrush x:Key="SecondaryTextBoxGrayColor" Color="#CBD5E1" />
    <!--  TextBox border  -->
    <SolidColorBrush x:Key="PrimaryTextColor2" Color="#1E293B" />
    <!--  TextBox text  -->

    <!--  Icon Colors  -->
    <SolidColorBrush x:Key="IconColor" Color="#64748B" />
    <!--  Icon color  -->

    <!--  Control Colors  -->
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#FFFFFF" />
    <!--  Control background  -->
    <SolidColorBrush x:Key="BorderBrush" Color="#E2E8F0" />
    <!--  Control border  -->
    <SolidColorBrush x:Key="ForegroundBrush" Color="#1E293B" />
    <!--  Control foreground  -->
    <SolidColorBrush x:Key="PlaceholderTextBrush" Color="#94A3B8" />
    <!--  Placeholder text  -->
    <SolidColorBrush x:Key="AccentBrush" Color="#3B82F6" />
    <!--  Accent color  -->
    <SolidColorBrush x:Key="IconBrush" Color="#64748B" />
    <!--  Icon brush  -->

    <!--  Card & Panel Colors  -->
    <SolidColorBrush x:Key="CardBackgroundColor" Color="#FFFFFF" />
    <!--  Card background - White  -->
    <SolidColorBrush x:Key="CardBorderColor" Color="#E2E8F0" />
    <!--  Card border - Light gray  -->
    <SolidColorBrush x:Key="ChartPlaceholderBackground" Color="#F8FAFC" />
    <!--  Chart placeholder background  -->

    <!--  Header Colors  -->
    <SolidColorBrush x:Key="PrimaryHeaderColor" Color="#1E293B" />
    <!--  Main headers - Dark slate  -->
    <SolidColorBrush x:Key="SecondaryHeaderColor" Color="#64748B" />
    <!--  Subheaders - Gray  -->

</ResourceDictionary>