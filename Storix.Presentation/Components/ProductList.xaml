<views:MvxWpfView x:Class="Storix.Presentation.Components.ProductList"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                  xmlns:loadingSpinnerControl="clr-namespace:LoadingSpinnerControl;assembly=LoadingSpinnerControl"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:resources="clr-namespace:Storix.Presentation.Resources"
                  xmlns:viewModels="clr-namespace:Storix.Core.ViewModels.Products;assembly=Storix.Core"
                  xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
                  d:DataContext="{d:DesignInstance Type=viewModels:ProductListViewModel,
                                                   IsDesignTimeCreatable=True}"
                  d:DesignHeight="auto"
                  d:DesignWidth="auto"
                  mc:Ignorable="d">
    <views:MvxWpfView.Resources>
        <BooleanToVisibilityConverter x:Key="ToVisibilityConverter" />
    </views:MvxWpfView.Resources>
    <Grid>
        <!--  Loading Overlay  -->
        <StackPanel VerticalAlignment="Center" Visibility="{Binding IsLoading, Converter={StaticResource ToVisibilityConverter}, UpdateSourceTrigger=PropertyChanged}">

            <loadingSpinnerControl:LoadingSpinner Diameter="100"
                                                  IsLoading="{Binding IsLoading}"
                                                  Thickness="3" />

            <TextBlock Margin="0,10"
                       VerticalAlignment="Top"
                       FontFamily="Amita"
                       Text="Loading Products from database..."
                       TextAlignment="Center" />
        </StackPanel>

        <!--  Main Content  -->
        <Grid Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}, ConverterParameter=true, UpdateSourceTrigger=PropertyChanged}">
            <Grid Margin="3">
                <Grid.RowDefinitions>
                    <!--  Filter Header (shown when filtering)  -->
                    <RowDefinition Height="Auto" />
                    <!--  Search and Actions  -->
                    <RowDefinition Height="60" />
                    <!--  DataGrid  -->
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Filter Header Section (Category/Supplier)  -->
                <Border Grid.Row="0"
                        Margin="15,10,15,10"
                        Padding="20,15"
                        Background="{DynamicResource CardBackgroundColor}"
                        BorderBrush="{DynamicResource PrimaryBorderColor}"
                        BorderThickness="2"
                        CornerRadius="8"
                        Visibility="{Binding IsFiltered, Converter={StaticResource ToVisibilityConverter}}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!--  Filter Icon  -->
                        <iconPacks:PackIconMaterial Grid.Column="0"
                                                    Width="32"
                                                    Height="32"
                                                    VerticalAlignment="Center"
                                                    Foreground="#3B82F6"
                                                    Kind="FilterOutline" />

                        <!--  Filter Title & Subtitle  -->
                        <StackPanel Grid.Column="1"
                                    Margin="15,0,0,0"
                                    VerticalAlignment="Center">
                            <TextBlock FontFamily="Californian FB"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource PrimaryTextColor}"
                                       Text="{Binding FilterTitle}"
                                       TextWrapping="Wrap" />
                            <TextBlock Margin="0,4,0,0"
                                       FontSize="13"
                                       Foreground="{DynamicResource SecondaryTextColor}"
                                       Text="{Binding FilterSubtitle}"
                                       TextWrapping="Wrap" />
                        </StackPanel>

                        <!--  Close Filter Button (Power Off style)  -->
                        <Button Grid.Column="2"
                                Width="50"
                                Height="50"
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                Command="{Binding CloseCommand}"
                                Style="{DynamicResource DelBtn}"
                                ToolTip="Close Filter">
                            <iconPacks:PackIconMaterial Width="24"
                                                        Height="24"
                                                        Foreground="White"
                                                        Kind="Power"
                                                        Style="{StaticResource IconButtonIcon}" />
                        </Button>
                    </Grid>
                </Border>

                <!--  Header section containing search and action buttons  -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <!--  Search takes more space  -->
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--  Search bar with icon  -->
                    <resources:CustomSearchBox Grid.Column="0"
                                               Margin="15,0,0,0"
                                               VerticalAlignment="Center"
                                               Data="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                               Placeholder="Search Products..." />


                    <!--  Button to add new Product  -->
                    <Button Grid.Column="1"
                            Width="120"
                            Margin="10,0,15,0"
                            HorizontalAlignment="Right"
                            Command="{Binding OpenProductFormCommand}"
                            CommandParameter="{x:Null}"
                            IsDefault="True"
                            Style="{DynamicResource OpenBtn}"
                            ToolTip="Add New Product">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Margin="0,0,5,0"
                                                        Kind="PackageVariantPlus"
                                                        Style="{StaticResource IconButtonIcon}" />
                            <TextBlock VerticalAlignment="Center" Text="Product" />
                        </StackPanel>
                    </Button>
                </Grid>

                <!--  DataGrid displaying the list of members  -->
                <DataGrid Grid.Row="2"
                          Background="{DynamicResource SecondaryBackgroundColor}"
                          CellStyle="{StaticResource DataGridCellStyle1}"
                          ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle1}"
                          ItemsSource="{Binding Products, UpdateSourceTrigger=PropertyChanged}"
                          RowStyle="{StaticResource DataGridRowStyle1}"
                          Style="{DynamicResource DataGridStyle1}"
                          VerticalScrollBarVisibility="Auto">
                    <DataGrid.Columns>
                        <!--  Column for selecting members using a checkbox  -->
                        <DataGridTemplateColumn Width="Auto" Header="Select">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!--  Column displaying the Name of the product  -->
                        <DataGridTextColumn Width="*"
                                            Binding="{Binding Name}"
                                            CanUserResize="False"
                                            Header="Name"
                                            IsReadOnly="True" />

                        <!--  Column displaying the SKU of the product  -->
                        <DataGridTextColumn Width="*"
                                            Binding="{Binding SKU}"
                                            CanUserResize="False"
                                            Header="SKU"
                                            IsReadOnly="True" />

                        <!--  Column displaying the Price of the product  -->
                        <DataGridTextColumn Width="*"
                                            Binding="{Binding FormattedPrice}"
                                            CanUserResize="False"
                                            Header="Price"
                                            IsReadOnly="True" />

                        <!--  Column displaying the Cost of the product  -->
                        <DataGridTextColumn Width="*"
                                            Binding="{Binding FormattedCost}"
                                            CanUserResize="False"
                                            Header="Cost"
                                            IsReadOnly="True" />

                        <!--  Column indicating the Category of the product  -->
                        <DataGridTextColumn Width="*"
                                            Binding="{Binding CategoryName}"
                                            CanUserResize="False"
                                            Header="Category"
                                            IsReadOnly="True" />

                        <!--  Column displaying the Supplier of the product  -->
                        <DataGridTextColumn Width="*"
                                            Binding="{Binding SupplierName}"
                                            CanUserResize="False"
                                            Header="Supplier Name"
                                            IsReadOnly="True" />

                        <!--  Column displaying the Current stock of the product  -->
                        <DataGridTextColumn Width="*"
                                            Binding="{Binding CurrentStock}"
                                            CanUserResize="False"
                                            Header="Current Stock"
                                            IsReadOnly="True" />

                        <!--  Column displaying the Max Stock Level of the product  -->
                        <DataGridTextColumn Width="*"
                                            Binding="{Binding MaxStockLevel}"
                                            CanUserResize="False"
                                            Header="Max Stock"
                                            IsReadOnly="True" />

                        <!--  Column displaying the Min Stock Level of the product  -->
                        <DataGridTextColumn Width="*"
                                            Binding="{Binding MinStockLevel}"
                                            CanUserResize="False"
                                            Header="Min Stock"
                                            IsReadOnly="True" />

                        <!--  Column containing operation buttons for each member  -->
                        <DataGridTemplateColumn Width="auto"
                                                Header="Operations"
                                                IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <!--  Button to open the details dialog for a member  -->
                                        <Button Margin="0,0,5,0"
                                                Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=DataContext.OpenProductDetailsCommand}"
                                                CommandParameter="{Binding ProductId}"
                                                IsDefault="True"
                                                Style="{DynamicResource CreateBtn}">
                                            <iconPacks:PackIconMaterial Kind="OpenInNew" Style="{StaticResource IconButtonIcon}" />
                                        </Button>

                                        <!--  Button to open the update dialog for a member  -->
                                        <Button Margin="0,0,5,0"
                                                Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=DataContext.OpenProductFormCommand}"
                                                CommandParameter="{Binding ProductId}"
                                                Style="{DynamicResource EditBtn}">
                                            <iconPacks:PackIconMaterial Kind="PackageVariantMinus" Style="{StaticResource IconButtonIcon}" />
                                        </Button>

                                        <!--  Button to open the delete dialog for a member  -->
                                        <Button Margin="0,0,5,0"
                                                Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=DataContext.OpenProductDeleteCommand}"
                                                CommandParameter="{Binding ProductId}"
                                                Style="{DynamicResource DelBtn}">
                                            <iconPacks:PackIconMaterial Kind="PackageVariantRemove" Style="{StaticResource IconButtonIcon}" />
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Grid>
</views:MvxWpfView>