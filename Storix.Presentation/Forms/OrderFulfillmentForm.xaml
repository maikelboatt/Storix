<views:MvxWpfView x:Class="Storix.Presentation.Forms.OrderFulfillmentForm"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:fulfillment="clr-namespace:Storix.Core.ViewModels.Orders.Fulfillment;assembly=Storix.Core"
                  xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                  xmlns:loadingSpinnerControl="clr-namespace:LoadingSpinnerControl;assembly=LoadingSpinnerControl"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
                  d:DataContext="{d:DesignInstance Type=fulfillment:OrderFulfillmentFormViewModel,
                                                   IsDesignTimeCreatable=True}"
                  d:DesignHeight="700"
                  d:DesignWidth="800"
                  mc:Ignorable="d">
    <Border Padding="30"
            Background="{DynamicResource PrimaryBackgroundColor}"
            BorderBrush="{DynamicResource SecondaryBorderColor}"
            BorderThickness="1"
            CornerRadius="12">
        <Grid>
            <!--  Loading Overlay  -->
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="{Binding IsProcessing, Converter={StaticResource ToVisibilityConverter}}">
                <loadingSpinnerControl:LoadingSpinner Diameter="100"
                                                      IsLoading="{Binding IsProcessing}"
                                                      Thickness="3" />
                <TextBlock Margin="0,10"
                           FontFamily="Californian FB"
                           FontSize="14"
                           Foreground="{DynamicResource SecondaryTextColor}"
                           Text="Processing fulfillment..."
                           TextAlignment="Center" />
            </StackPanel>

            <!--  Main Content  -->
            <Grid Visibility="{Binding IsProcessing, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Header  -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock FontFamily="Californian FB"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource PrimaryTextColor}">
                            <Run Text="{Binding FormIcon, Mode=OneWay}" />
                            <Run Text="{Binding Title, Mode=OneWay}" />
                        </TextBlock>
                        <TextBlock Margin="0,5,0,0"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource AccentColor}"
                                   Text="{Binding OrderNumber}" />
                        <TextBlock Margin="0,5,0,0"
                                   FontSize="14"
                                   Foreground="{DynamicResource SecondaryTextColor}"
                                   Text="Select location and confirm quantities to update inventory" />
                    </StackPanel>
                </Grid>

                <!--  Form Content  -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!--  Location & Date Section  -->
                        <Border Margin="0,0,0,20"
                                Padding="20"
                                Background="{DynamicResource SecondaryBackgroundColor}"
                                BorderBrush="{DynamicResource SecondaryBorderColor}"
                                BorderThickness="1"
                                CornerRadius="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!--  Location Selection  -->
                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock FontSize="12"
                                               FontWeight="Bold"
                                               Foreground="{DynamicResource SecondaryTextColor}"
                                               Text="{Binding LocationLabel}" />
                                    <ComboBox Margin="0,8,0,0"
                                              DisplayMemberPath="Name"
                                              ItemsSource="{Binding AvailableLocations}"
                                              SelectedValue="{Binding SelectedLocationId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              SelectedValuePath="LocationId"
                                              Style="{StaticResource ComboBoxStyle}">
                                        <ComboBox.ItemContainerStyle>
                                            <Style TargetType="ComboBoxItem">
                                                <Setter Property="Padding" Value="10,8" />
                                            </Style>
                                        </ComboBox.ItemContainerStyle>
                                    </ComboBox>
                                </StackPanel>

                                <!--  Fulfillment Date  -->
                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock FontSize="12"
                                               FontWeight="Bold"
                                               Foreground="{DynamicResource SecondaryTextColor}"
                                               Text="Fulfillment Date *" />
                                    <DatePicker Margin="0,8,0,0"
                                                SelectedDate="{Binding FulfillmentDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                Style="{StaticResource DatePickerStyle}" />
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!--  Items Section  -->
                        <TextBlock Margin="0,0,0,15"
                                   FontFamily="Californian FB"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource PrimaryTextColor}"
                                   Text="📦 Items to Fulfill" />

                        <!--  Items DataGrid  -->
                        <DataGrid Margin="0,0,0,20"
                                  ItemsSource="{Binding FulfillmentItems}"
                                  Style="{StaticResource DataGridStyle}">
                            <DataGrid.Columns>
                                <!--  Product Name  -->
                                <DataGridTextColumn Width="*"
                                                    Binding="{Binding ProductName}"
                                                    Header="Product"
                                                    IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="Bold" />
                                            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!--  SKU  -->
                                <DataGridTextColumn Width="120"
                                                    Binding="{Binding SKU}"
                                                    Header="SKU"
                                                    IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="{DynamicResource SecondaryTextColor}" />
                                            <Setter Property="FontSize" Value="11" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!--  Ordered Quantity  -->
                                <DataGridTextColumn Width="100"
                                                    Binding="{Binding OrderedQuantity}"
                                                    Header="Ordered"
                                                    IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!--  Quantity to Fulfill  -->
                                <DataGridTextColumn Width="120"
                                                    Binding="{Binding QuantityToFulfill, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    Header="Fulfill Qty">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                            <Setter Property="FontWeight" Value="Bold" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!--  Unit Price  -->
                                <DataGridTextColumn Width="100"
                                                    Binding="{Binding UnitPrice, StringFormat=C2}"
                                                    Header="Unit Price"
                                                    IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!--  Line Total  -->
                                <DataGridTextColumn Width="120"
                                                    Binding="{Binding LineTotal, StringFormat=C2}"
                                                    Header="Line Total"
                                                    IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right" />
                                            <Setter Property="FontWeight" Value="Bold" />
                                            <Setter Property="Foreground" Value="{DynamicResource AccentColor}" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!--  Discrepancy Warning  -->
                                <DataGridTemplateColumn Width="50" Header="">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <iconPacks:PackIconMaterial Width="20"
                                                                        Height="20"
                                                                        HorizontalAlignment="Center"
                                                                        Foreground="#EF4444"
                                                                        Kind="AlertCircle"
                                                                        ToolTip="Quantity differs from ordered amount"
                                                                        Visibility="{Binding HasDiscrepancy, Converter={StaticResource ToVisibilityConverter}}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!--  Notes Section  -->
                        <TextBlock Margin="0,0,0,10"
                                   FontFamily="Californian FB"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource PrimaryTextColor}"
                                   Text="📝 Notes (Optional)" />

                        <TextBox Height="80"
                                 Margin="0,0,0,20"
                                 AcceptsReturn="True"
                                 Style="{StaticResource TextBoxStyle}"
                                 Text="{Binding Notes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto" />

                        <!--  Info Panel  -->
                        <Border Padding="15"
                                Background="{DynamicResource InfoBackgroundColor}"
                                BorderBrush="{DynamicResource InfoBorderColor}"
                                BorderThickness="1"
                                CornerRadius="8">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Width="16"
                                                                Height="16"
                                                                Foreground="{DynamicResource InfoIconColor}"
                                                                Kind="InformationOutline" />
                                    <TextBlock Margin="8,0,0,0"
                                               FontSize="12"
                                               FontWeight="Bold"
                                               Foreground="{DynamicResource InfoTextColor}"
                                               Text="Fulfillment Tips" />
                                </StackPanel>
                                <TextBlock Margin="0,5,0,0"
                                           FontSize="11"
                                           Foreground="{DynamicResource InfoTextColor}"
                                           Text="• Adjust quantities if items are damaged or short-shipped"
                                           TextWrapping="Wrap" />
                                <TextBlock Margin="0,2,0,0"
                                           FontSize="11"
                                           Foreground="{DynamicResource InfoTextColor}"
                                           Text="• Inventory will be updated at the selected location"
                                           TextWrapping="Wrap" />
                                <TextBlock Margin="0,2,0,0"
                                           FontSize="11"
                                           Foreground="{DynamicResource InfoTextColor}"
                                           Text="• Order status will be updated to 'Completed' after confirmation"
                                           TextWrapping="Wrap" />
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <!--  Footer Buttons  -->
                <Grid Grid.Row="2" Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--  Required Fields Note  -->
                    <TextBlock Grid.Column="0"
                               VerticalAlignment="Center"
                               FontSize="11"
                               Foreground="{DynamicResource SecondaryTextColor}"
                               Text="* Required fields" />

                    <!--  Cancel Button  -->
                    <Button Grid.Column="1"
                            Width="120"
                            Height="40"
                            Margin="0,0,10,0"
                            Command="{Binding CancelCommand}"
                            Style="{DynamicResource CancelBtn}">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Width="18"
                                                        Height="18"
                                                        VerticalAlignment="Center"
                                                        Kind="Close" />
                            <TextBlock Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       FontSize="14"
                                       Text="Cancel" />
                        </StackPanel>
                    </Button>

                    <!--  Confirm Button  -->
                    <Button Grid.Column="2"
                            Width="180"
                            Height="40"
                            Command="{Binding ConfirmFulfillmentCommand}"
                            IsDefault="True"
                            IsEnabled="{Binding CanConfirm}"
                            Style="{DynamicResource CreateBtn}">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Width="18"
                                                        Height="18"
                                                        VerticalAlignment="Center"
                                                        Kind="Check" />
                            <TextBlock Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Text="{Binding ConfirmButtonText}" />
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</views:MvxWpfView>