<views:MvxWpfView x:Class="Storix.Presentation.Forms.ProductForm"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                  xmlns:loadingSpinnerControl="clr-namespace:LoadingSpinnerControl;assembly=LoadingSpinnerControl"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:products="clr-namespace:Storix.Core.ViewModels.Products;assembly=Storix.Core"
                  xmlns:resources="clr-namespace:Storix.Presentation.Resources"
                  xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
                  d:DataContext="{d:DesignInstance Type=products:ProductFormViewModel,
                                                   IsDesignTimeCreatable=True}"
                  d:DesignHeight="auto"
                  d:DesignWidth="800"
                  mc:Ignorable="d">
    <Border Padding="30"
            Background="{DynamicResource PrimaryBackgroundColor}"
            BorderBrush="{DynamicResource SecondaryBorderColor}"
            BorderThickness="1"
            CornerRadius="12">
        <Grid>
            <!--  Loading Overlay  -->
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="{Binding IsLoading, Converter={StaticResource ToVisibilityConverter}, UpdateSourceTrigger=PropertyChanged}">
                <loadingSpinnerControl:LoadingSpinner Diameter="100"
                                                      IsLoading="{Binding IsLoading}"
                                                      Thickness="3" />
                <TextBlock Margin="0,10"
                           FontFamily="Californian FB"
                           FontSize="14"
                           Foreground="{DynamicResource SecondaryTextColor}"
                           Text="{Binding IsEditMode, Converter={StaticResource EditModeToTextConverter}}"
                           TextAlignment="Center" />
            </StackPanel>

            <!--  Main Content  -->
            <Grid Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}, ConverterParameter=true, UpdateSourceTrigger=PropertyChanged}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Header Section  -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock FontFamily="Californian FB"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource PrimaryTextColor}"
                                   Text="{Binding Title}" />
                        <TextBlock Margin="0,5,0,0"
                                   FontSize="14"
                                   Foreground="{DynamicResource SecondaryTextColor}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="Fill in the details below to add a new product to your inventory" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsEditMode}" Value="True">
                                            <Setter Property="Text" Value="Update the product information below" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>

                    <!--  Reset Button (Only in Edit Mode)  -->
                    <Button Grid.Column="1"
                            Width="110"
                            Height="36"
                            Command="{Binding ResetCommand}"
                            Style="{DynamicResource CancelBtn}"
                            ToolTip="Reset form to original values"
                            Visibility="{Binding IsEditMode, Converter={StaticResource ToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Width="16"
                                                        Height="16"
                                                        VerticalAlignment="Center"
                                                        Kind="Refresh" />
                            <TextBlock Margin="6,0,0,0"
                                       VerticalAlignment="Center"
                                       FontSize="13"
                                       Text="Reset" />
                        </StackPanel>
                    </Button>
                </Grid>

                <!--  Form Content  -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!--  Basic Information Section  -->
                        <TextBlock Margin="0,0,0,15"
                                   FontFamily="Californian FB"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource PrimaryTextColor}"
                                   Text="📦 Basic Information" />

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  Product Name  -->
                            <resources:CustomTextBox Grid.Column="0"
                                                     Data="{Binding Input.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                     Description="Product Name *"
                                                     Placeholder="e.g., Laptop Pro X1" />

                            <!--  SKU  -->
                            <resources:CustomTextBox Grid.Column="1"
                                                     Data="{Binding Input.SKU, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                     Description="SKU (Stock Keeping Unit) *"
                                                     Placeholder="e.g., LAP-001-BLK" />
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  Barcode  -->
                            <resources:CustomTextBox Grid.Column="0"
                                                     Data="{Binding Input.Barcode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                     Description="Barcode (Optional)"
                                                     Placeholder="e.g., 1234567890123" />

                            <!--  Category Dropdown  -->
                            <StackPanel Grid.Column="1" Margin="20,10">
                                <TextBlock FontSize="12"
                                           Foreground="{DynamicResource SecondaryTextColor}"
                                           Text="Category *" />
                                <ComboBox DisplayMemberPath="Name"
                                          ItemsSource="{Binding Input.Categories}"
                                          SelectedValue="{Binding Input.CategoryId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          SelectedValuePath="CategoryId"
                                          Style="{StaticResource ComboBoxStyle}" />
                            </StackPanel>
                        </Grid>

                        <!--  Description  -->
                        <StackPanel Margin="20,10">
                            <TextBlock FontSize="12"
                                       Foreground="{DynamicResource SecondaryTextColor}"
                                       Text="Description" />
                            <TextBox Height="80"
                                     AcceptsReturn="True"
                                     Style="{StaticResource TextBoxStyle}"
                                     Text="{Binding Input.Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto" />
                        </StackPanel>

                        <!--  Pricing Section  -->
                        <TextBlock Margin="0,20,0,15"
                                   FontFamily="Californian FB"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource PrimaryTextColor}"
                                   Text="💰 Pricing" />

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  Price  -->
                            <resources:CustomDoubleBox Grid.Column="0"
                                                       Biggest="1000000"
                                                       Data="{Binding Input.Price, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                       Description="Selling Price *"
                                                       Smallest="0" />

                            <!--  Cost  -->
                            <resources:CustomDoubleBox Grid.Column="1"
                                                       Biggest="1000000"
                                                       Data="{Binding Input.Cost, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                       Description="Cost Price *"
                                                       Smallest="0" />
                        </Grid>

                        <!--  Profit Margin Display  -->
                        <Border Margin="20,10"
                                Padding="12"
                                Background="#F0FDF4"
                                BorderBrush="#86EFAC"
                                BorderThickness="1"
                                CornerRadius="8"
                                Visibility="{Binding Input.ShowProfitMargin, Converter={StaticResource ToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Width="16"
                                                            Height="16"
                                                            VerticalAlignment="Center"
                                                            Foreground="#16A34A"
                                                            Kind="TrendingUp" />
                                <TextBlock Margin="8,0,0,0"
                                           VerticalAlignment="Center"
                                           FontSize="12"
                                           Foreground="#15803D">
                                    <Run FontWeight="Bold" Text="Profit Margin: " />
                                    <Run FontWeight="Bold" Text="{Binding Input.ProfitMargin, Mode=OneWay, StringFormat='{}{0:F2}%'}" />
                                    <Run Text=" | Profit: " />
                                    <Run Text="{Binding Input.ProfitAmount, StringFormat='${0:F2}'}" />
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <!--  Inventory Section  -->
                        <TextBlock Margin="0,20,0,15"
                                   FontFamily="Californian FB"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource PrimaryTextColor}"
                                   Text="📊 Inventory Management" />

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  Min Stock Level  -->
                            <resources:CustomIntegerBox Grid.Column="0"
                                                        Biggest="1000000"
                                                        Data="{Binding Input.MinStockLevel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        Description="Minimum Stock Level *"
                                                        Smallest="0" />

                            <!--  Max Stock Level  -->
                            <resources:CustomIntegerBox Grid.Column="1"
                                                        Biggest="1000000"
                                                        Data="{Binding Input.MaxStockLevel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        Description="Maximum Stock Level *"
                                                        Smallest="0" />
                        </Grid>

                        <!--  Supplier Section  -->
                        <TextBlock Margin="0,20,0,15"
                                   FontFamily="Californian FB"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource PrimaryTextColor}"
                                   Text="🏢 Supplier Information" />

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  Supplier Dropdown  -->
                            <StackPanel Grid.Column="0" Margin="20,10">
                                <TextBlock FontSize="12"
                                           Foreground="{DynamicResource SecondaryTextColor}"
                                           Text="Supplier *" />
                                <ComboBox DisplayMemberPath="Name"
                                          ItemsSource="{Binding Input.Suppliers}"
                                          SelectedValue="{Binding Input.SupplierId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          SelectedValuePath="SupplierId"
                                          Style="{StaticResource ComboBoxStyle}" />
                            </StackPanel>

                            <!--  Info Panel  -->
                            <Border Grid.Column="1"
                                    Margin="20,10"
                                    Padding="15"
                                    Background="{DynamicResource InfoBackgroundColor}"
                                    BorderBrush="{DynamicResource InfoBorderColor}"
                                    BorderThickness="1"
                                    CornerRadius="8">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Width="16"
                                                                    Height="16"
                                                                    Foreground="{DynamicResource InfoIconColor}"
                                                                    Kind="InformationOutline" />
                                        <TextBlock Margin="8,0,0,0"
                                                   FontSize="12"
                                                   FontWeight="Bold"
                                                   Foreground="{DynamicResource InfoTextColor}"
                                                   Text="Stock Level Tips" />
                                    </StackPanel>
                                    <TextBlock Margin="0,5,0,0"
                                               FontSize="11"
                                               Foreground="{DynamicResource InfoTextColor}"
                                               Text="• Min level triggers reorder alerts"
                                               TextWrapping="Wrap" />
                                    <TextBlock Margin="0,2,0,0"
                                               FontSize="11"
                                               Foreground="{DynamicResource InfoTextColor}"
                                               Text="• Max level prevents overstocking"
                                               TextWrapping="Wrap" />
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!--  Validation Summary  -->
                        <Border Margin="20,20,20,10"
                                Padding="15"
                                Background="#FEE2E2"
                                BorderBrush="#EF4444"
                                BorderThickness="1"
                                CornerRadius="8"
                                Visibility="{Binding HasErrors, Converter={StaticResource ToVisibilityConverter}}">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Width="18"
                                                                Height="18"
                                                                Foreground="#DC2626"
                                                                Kind="AlertCircle" />
                                    <TextBlock Margin="8,0,0,0"
                                               FontSize="13"
                                               FontWeight="Bold"
                                               Foreground="#991B1B"
                                               Text="Please fix the following errors:" />
                                </StackPanel>
                                <TextBlock Margin="26,8,0,0"
                                           FontSize="12"
                                           Foreground="#991B1B"
                                           Text="Check the fields marked with validation errors"
                                           TextWrapping="Wrap" />
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <!--  Footer Buttons  -->
                <Grid Grid.Row="2" Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--  Required Fields Note  -->
                    <StackPanel Grid.Column="0"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                        <TextBlock FontSize="11"
                                   Foreground="{DynamicResource SecondaryTextColor}"
                                   Text="* Required fields" />
                    </StackPanel>

                    <!--  Cancel Button  -->
                    <Button Grid.Column="1"
                            Width="120"
                            Height="40"
                            Margin="0,0,10,0"
                            Command="{Binding CancelCommand}"
                            Style="{DynamicResource CancelBtn}">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Width="18"
                                                        Height="18"
                                                        VerticalAlignment="Center"
                                                        Kind="Close" />
                            <TextBlock Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       FontSize="14"
                                       Text="Cancel" />
                        </StackPanel>
                    </Button>

                    <!--  Save Button  -->
                    <Button Grid.Column="2"
                            Width="140"
                            Height="40"
                            Command="{Binding SaveCommand}"
                            IsDefault="True"
                            Style="{DynamicResource CreateBtn}">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Width="18"
                                                        Height="18"
                                                        VerticalAlignment="Center">
                                <iconPacks:PackIconMaterial.Style>
                                    <Style TargetType="iconPacks:PackIconMaterial">
                                        <Setter Property="Kind" Value="ContentSave" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsEditMode}" Value="True">
                                                <Setter Property="Kind" Value="Check" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </iconPacks:PackIconMaterial.Style>
                            </iconPacks:PackIconMaterial>
                            <TextBlock Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Text="{Binding SaveButtonText}" />
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</views:MvxWpfView>