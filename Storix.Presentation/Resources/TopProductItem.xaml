<views:MvxWpfView x:Class="Storix.Presentation.Resources.TopProductItem"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
                  d:DesignHeight="300"
                  d:DesignWidth="300"
                  mc:Ignorable="d">
    <Border Margin="0,0,0,10"
            Padding="12"
            Background="#F8FAFC"
            CornerRadius="8">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  Rank Badge  -->
            <Border Grid.Column="0"
                    Width="32"
                    Height="32"
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"
                    Background="{Binding RankColor, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    CornerRadius="6">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="White"
                           Text="{Binding Rank, RelativeSource={RelativeSource AncestorType=UserControl}}" />
            </Border>

            <!--  Product Info  -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock FontSize="14"
                           FontWeight="Medium"
                           Foreground="#1e293b"
                           Text="{Binding ProductName, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           TextTrimming="CharacterEllipsis" />
                <TextBlock FontSize="11"
                           Foreground="#64748b"
                           Text="{Binding UnitsSold, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat='{}{0} units sold'}" />
            </StackPanel>

            <!--  Revenue  -->
            <TextBlock Grid.Column="2"
                       VerticalAlignment="Center"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#10B981"
                       Text="{Binding Revenue, RelativeSource={RelativeSource AncestorType=UserControl}}" />
        </Grid>
    </Border>
</views:MvxWpfView>